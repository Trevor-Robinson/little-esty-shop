<%= form_with url: merchant_items_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: @item.name ||= "Enter Name" %><br>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: @item.description ||= "Enter Description" %><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, step: 0.01, min: 0, placeholder: @item.unit_price ||= "Enter Selling Price" %>

  <%= f.submit 'Create Item' %>
<% end %>
