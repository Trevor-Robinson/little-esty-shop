<%= form_with url: merchant_item_path(@item.merchant.id, @item.id), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @item.name %><br>

  <%= f.label :description %>
  <%= f.text_area :description, value: @item.description %><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, step: 0.01, min: 0, value: @item.unit_price %>

  <%= f.submit 'Update Item' %>
<% end %>
