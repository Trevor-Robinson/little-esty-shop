<h1><%= @merchant.name %></h1>
<%= link_to "Create New Bulk Discount", new_merchant_discount_path(@merchant) %>
<ul>
  <% @merchant.discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>">
    <li><%= link_to "#{discount.percentage}% off of #{discount.quantity}", merchant_discount_path(@merchant.id, discount.id) %>
    <%= link_to  "Delete", merchant_discount_path(@merchant.id, discount.id), method: :delete%></li>
    </div>
  <% end %>
</ul>
<h3> Upcoming Holidays </h3>
<ul>
  <% @holidays.each do |holiday| %>
    <li> Holiday: <%= holiday.name %><br>
    Date: <%= holiday.date %> </li>
  <% end %>
</ul>
