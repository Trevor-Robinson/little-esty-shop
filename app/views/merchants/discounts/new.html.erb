<%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, placeholder: @discount.percentage ||= "Enter percentage" %><br>

  <%= f.label :quantity %>
  <%= f.text_area :quantity, placeholder: @discount.quantity ||= "Enter quantity" %><br>

  <%= f.submit 'Create Bulk Discount' %>
<% end %>
