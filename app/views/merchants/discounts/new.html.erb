<%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, min: 1, max: 100, placeholder: @discount.percentage ||= "Enter percentage" %><br>

  <%= f.label :quantity %>
  <%= f.number_field :quantity, min: 1, placeholder: @discount.quantity ||= "Enter quantity" %><br>

  <%= f.submit 'Create Bulk Discount' %>
<% end %>
